<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="@android:color/system_neutral1_0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/background_light">

            <TextView
                android:id="@+id/task_creation_date"
                android:layout_width="235dp"
                android:layout_height="15dp"
                android:text="TextView"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/delete_image_button"
                app:layout_constraintStart_toEndOf="@+id/task_checkBox"
                app:layout_constraintTop_toBottomOf="@+id/task_text_view"
                app:layout_constraintVertical_bias="0.103" />

            <TextView
                android:id="@+id/task_text_view"
                android:layout_width="234dp"
                android:layout_height="28dp"
                android:layout_marginTop="8dp"
                android:text="TextView"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/delete_image_button"
                app:layout_constraintStart_toEndOf="@+id/task_checkBox"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/delete_image_button"
                android:layout_width="38dp"
                android:layout_height="41dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.205"
                app:srcCompat="@drawable/ic_baseline_delete_24" />

            <CheckBox
                android:id="@+id/task_checkBox"
                android:layout_width="53dp"
                android:layout_height="50dp"
                android:layout_marginStart="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.266" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>